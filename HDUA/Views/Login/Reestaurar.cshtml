@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.3/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.3/js/bootstrap.min.js"></script>
    <title>HDUA</title>

    <style>
        body {
            background-color: lightgray;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4" style="background-color:#C2E6D6">
                <div class="card shadow-lg border border-black" style="background-color:#C2E6D6">
                    <div style="margin: 0 auto; text-align: center;">
                        <h3 class="card-title text-black fs-3"><samp>Reestablecer contraseña</samp></h3>
                    </div>
                    <div class="card-body">
                        <form id="recuperarPwordForm">
                            <div class="mb-3">
                                <img src="~/img/email.webp" alt="Ícono de usuario" width="40" height="40">
                                <input type="text" class="form-control" id="correo" placeholder="Correo..." name="correo">
                            </div>
                            <button type="submit" class="btn btn-outline-secondary" style="display: block; margin: 0 auto; color: black">Generar nueva contraseña</button>
                            <div class="col text-start">
                                <a href="@Url.Action("Login", "Login")"><samp>Volver al login</samp></a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#recuperarPwordForm').on('submit', function (e) {
                e.preventDefault();
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("RecuperarPword", "Login")',
                    data: {
                        correo: $('#correo').val()
                    },
                    success: function (response) {
                        alert(response.message);
                        if (response.success) {
                            window.location.href = '@Url.Action("Login", "Login")';
                        }
                    },
                    error: function () {
                        alert('Ocurrió un error al procesar la solicitud.');
                    }
                });
            });
        });
    </script>
</body>
</html>
