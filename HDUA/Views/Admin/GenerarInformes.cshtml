@{
    Layout = "~/Views/Shared/layau2.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.3/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.3/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <title>HDUA</title>

    <style>

    </style>
</head>

<body>
    <samp>
    <div class="row mt-5">
        <div class="col d-flex justify-content-center align-items-center" style="background-color: rgba(128, 128, 128, 0.5);">
            <h3 class="panel-heading">GENERADOR DE INFORMES</h3>
        </div>
    </div>

    <div class="row mt-3 justify-content-center">
        <div class="col-md-8" style="max-height: 330px; overflow-y: auto;">
            <table class="table table-striped table-hover mt-3" id="tablaUsuarios">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Descargar en .PDF</th>
                        <th>Descargar en .CSV</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>Muestras por recolector</td>
                        <td>Este informe proporciona consulta detallada de los recolectores y sus muestras asociadas.</td>
                        <td>
                            <button type="button" class="btn btn-link btn-editar" id="btnDescargarPDF" onclick="window.location.href='@Url.Action("DescargarPDF1", "Admin")'">
                                <i class="fa-regular fa-file-pdf fa-beat" style="font-size: 2.5rem; color: #d80e0e"></i>
                            </button>
                        </td>
                        <td>
                            <button type="button" class="btn btn-link btn-editar" onclick="window.location.href='@Url.Action("DescargarEXCEL1", "Admin")'">
                                <i class="fa-regular fa-file-excel fa-beat" style="font-size: 2.5rem; color: #1f5127"></i>
                            </button>
                        </td>
                    </tr>

                        <tr>
                            <td>2</td>
                            <td>Tabla Darwin Core</td>
                            <td>
                                <!-- Estructura de dos columnas para la descripción y el formulario -->
                                <div class="row">
                                    <!-- Columna para la descripción -->
                                    <div class="col-md-6">
                                        <div class="row">
                                            Informe de muestras en tabla de Darwin Core según fechas de recolección
                                        </div>
                                    </div>

                                    <!-- Columna para el formulario -->
                                    <div class="col-md-6">
                                        <form method="post" action="@Url.Action("GenerarInforme", "Admin")" id="form-informe">
                                            <div class="row">
                                                <label for="inicio">Fecha de inicio:</label>
                                                <input type="date" id="inicio" name="inicio" class="form-control" required>
                                            </div>

                                            <div class="row mt-2">
                                                <label for="fin">Fecha de fin:</label>
                                                <input type="date" id="fin" name="fin" class="form-control" required>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </td>

                            <td>
                                <i class="fa-solid fa-ban" style="font-size: 2.5rem; color: #d80e0e"></i>
                            </td>
                            <td>
                                <!-- Botón de Excel que también envía el formulario -->
                                <button type="button" class="btn btn-link btn-editar" onclick="document.getElementById('form-informe').submit();">
                                    <i class="fa-regular fa-file-excel fa-beat" style="font-size: 2.5rem; color: #1f5127"></i>
                                </button>
                            </td>
                        </tr>


                    <tr>
                        <td>3</td>
                        <td>Informe por desarrollar</td>
                        <td>Este informe - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -.</td>
                        <td>
                            <button type="button" class="btn btn-link btn-editar" id="btnDescargarPDF" onclick="window.location.href='@Url.Action("", "Admin")'">
                                <i class="fa-regular fa-file-pdf fa-beat" style="font-size: 2.5rem; color: #d80e0e"></i>
                            </button>
                        </td>
                        <td>
                            <button type="button" class="btn btn-link btn-editar" onclick="window.location.href='@Url.Action("", "Admin")'">
                                <i class="fa-regular fa-file-excel fa-beat" style="font-size: 2.5rem; color: #1f5127"></i>
                            </button>
                        </td>
                    </tr>

                    <tr>
                        <td>4</td>
                        <td>Informe por desarrollar</td>
                        <td>Este informe - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -.</td>
                        <td>
                            <button type="button" class="btn btn-link btn-editar" id="btnDescargarPDF" onclick="window.location.href='@Url.Action("", "Admin")'">
                                <i class="fa-regular fa-file-pdf fa-beat" style="font-size: 2.5rem; color: #d80e0e"></i>
                            </button>
                        </td>
                        <td>
                            <button type="button" class="btn btn-link btn-editar" onclick="window.location.href='@Url.Action("", "Admin")'">
                                <i class="fa-regular fa-file-excel fa-beat" style="font-size: 2.5rem; color: #1f5127"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

            <div class="row-md-auto text-center">
                <div class="row-md-auto mt-3 text-center">
                    <img src="~/img/flechatras2.webp" alt="Ícono" width="100" height="100">
                </div>
                <div class="row-md-auto mt-2 text-center">
                    <a href="@Url.Action("Principal", "Admin")" class="btn btn-success" style="color: lightgray">
                        <samp>Volver</samp>
                    </a>
                </div>
            </div>
    </div>
    </samp>
</body>

</html>